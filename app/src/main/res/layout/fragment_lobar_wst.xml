<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragment.LobarWstFragment"
android:orientation="vertical"
android:id="@+id/lobarLayout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/latarkurvaa"/>
    <ImageView
        android:layout_marginTop="-280dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/judullll"/>

</LinearLayout>
<LinearLayout
    android:layout_marginTop="-70dp"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/tvLotim"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lombok Timur"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tvLobar"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lombok Barat"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tvLoteng"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lombok Tengah"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tvLobut"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lombok Utara"
        android:textSize="12sp"/>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="460dp"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_listWisata"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        tools:listitem="@layout/item_wisata"
        />
    <Button
        android:id="@+id/btnNext"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/button"
        android:text="Next"
        android:textAllCaps="false"
        />
</LinearLayout>

</LinearLayout>