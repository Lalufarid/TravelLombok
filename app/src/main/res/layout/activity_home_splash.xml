<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSplashActivity"
    android:background="@drawable/latar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgSplash"
            android:layout_marginTop="95dp"
            android:layout_width="239dp"
            android:layout_height="124dp"
            android:src="@drawable/judullll"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgSplash2"
            android:layout_width="295dp"
            android:layout_height="167dp"
            android:src="@drawable/kotak"/>
        <TextView
            android:id="@+id/tvSplash"
            android:layout_marginTop="-140dp"
            android:layout_width="265dp"
            android:layout_height="110dp"
            android:text="Aplikasi ini akan membantu anda
menjelajahi tempat wisata yang ada di
pulau lombok, merekomendasikan anda
tempat wisata terbaik, serta membantu
anda menemukan kendaraan pariwisata
yang akan mengantar anda menuju tempat
wisata yang anda inginkan"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/btnSplash"
            android:textAllCaps="false"
            android:layout_width="159dp"
            android:layout_height="36dp"
            android:text="Mulai"
            android:background="@drawable/button"/>
    </LinearLayout>

</LinearLayout>